extends base.pug

block scripts 
    script(src="static/index.js")

block style 
    style 
        include ../static/style.css 
        include ../static/stylecontact.css 

block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="post")
            input(type="text", name="name" class="myInput" placeholder="Enter Your Name") 
            input(type="text", name="age" class="myInput" placeholder="Enter Your Age") 
            input(type="phone", name="phone" class="myInput" placeholder="Enter Your Phone No.") 
            input(type="email", name="email" class="myInput" placeholder="Enter Your Email") 
            textarea(name="address", cols="30", rows="5" placeholder="Enter your Address")
            textarea(name="desc", cols="30", rows="5" placeholder="Enter your Concern")
            button.btn  
                |  Submit 